<?xml version="1.0" encoding="utf-8"?>
<com.ming.gpulltorefresh.GPullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullTorefrsh"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ming.gpulltorefresh.ScrollerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:background="#FFF000"
                android:text="PART 1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:text="PART 2"/>
        </LinearLayout>
    </ScrollView>

</com.ming.gpulltorefresh.GPullToRefreshLayout>
